<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles/image.css">
</head>
<body>
  <div class="container">
    <div class="left-column">
      <img src="/images<%= image.filename %>" alt="<%= image.id %>" id="<%= image.id %>" class="gallery-item"/>
    </div>
    <div class="right-column">
      <div class="text-container">
        <h1 id="captions">Captions:</h1>
        <% captions.forEach(caption => { %>
          <p id="caption"><%= caption.username %>: <%= caption.caption %></p>
        <% }) %>
      </div>
      <div class="form">
        <form id="form">
          <textarea id="textarea" name="newcaption" maxlength="150" placeholder="Add your caption..."></textarea>
          <button id="button" type="submit">add</button>
        </form>
      </div>
    </div>
  </div>
  <script src="DOM.js"></script>
</body>
</html>



